{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "react",
    "downlevelIteration": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@goodfaith/data": [
        "libs/data/src/index.ts"
      ],
      "@goodfaith/ui": [
        "libs/ui/src/index.ts"
      ],
      "@goodfaith/admin/dashboard": [
        "libs/admin/dashboard/src/index.ts"
      ],
      "@goodfaith/client/home": [
        "libs/client/home/src/index.ts"
      ],
      "@goodfaith/client/auth": [
        "libs/client/auth/src/index.ts"
      ],
    },
    "rootDir": "."
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
